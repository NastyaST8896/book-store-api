{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2015"],
    "baseUrl": ".",
    "rootDir": "./src",
    "noEmit": false,
    "outDir": "./build"
  },
  "exclude": [
    "build"
  ],
  "include": [
    "src/**/*"
  ]
}
